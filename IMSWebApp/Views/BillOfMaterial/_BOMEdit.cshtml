@model IMSWebApp.Models.BOMInventory

<div class="container mt-4">
    <form id="editBOMForm">
        <input type="hidden" id="hdnFGCode" value="@Model.FGCode" />
        <input type="hidden" id="Id" name="Id" class="form-control" value="@Model.Id" />
        <div class="form-group row">
            <label for="PlantCode" class="col-sm-2 col-form-label">Plant Code</label>
            <div class="col-sm-10">
                <input type="text" id="PlantCode" name="PlantCode" class="form-control" value="@Model.PlantCode" readonly />
            </div>
        </div>
        <div class="form-group row">
            <label for="BOMCode" class="col-sm-2 col-form-label">BOM Code</label>
            <div class="col-sm-10">
                <input type="text" id="BOMCode" name="BOMCode" class="form-control" value="@Model.BOMCode" readonly />
            </div>
        </div>
        <div class="form-group row">
            <label for="FGCode" class="col-sm-2 col-form-label">Inventory</label>
            <div class="col-sm-10">
                <select id="FGCode" name="FGCode" class="form-control">
                    <option value="">Select Inventory</option>
                    <!-- Options will be populated by jQuery -->
                </select>
            </div>
        </div>

@*         <div class="form-group row">
            <label for="FGName" class="col-sm-2 col-form-label">Inventory Name</label>
            <div class="col-sm-10">
                <input type="number" id="FGName" name="FGName" class="form-control" value="@Model.FGName" />
            </div>
        </div> *@

        <div class="form-group row">
            <label for="BOMDescription" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
                <input type="text" id="BOMDescription" name="BOMDescription" class="form-control" value="@Model.BOMDescription" />
            </div>
        </div>


        <div class="form-group row">
            <div class="col-lg-12 mt-4">
                <button type="button" class="btn btn-primary" id="addBOMMaterialBtn">Add Material</button>
            </div>
            <div class="col-lg-12 mt-1">
                <div id="bomMaterialGrid"></div>
            </div>
        </div>



       <div class="form-group row">
            <div class="col-lg-12 mt-10">
                <button type="submit" class="btn btn-success" id="submitBOMBtn">Save BOM</button>
            </div>
        </div>
    </form>
</div>

<script src="~/js/bom.js"></script>
