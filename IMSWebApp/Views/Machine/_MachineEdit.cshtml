@model IMSWebApp.Models.TMMachine

<div class="container mt-4">
    <form id="editMachineForm" method="POST">
        <input type="hidden" id="Id" name="Id" value="@Model.Id" />
        <input type="hidden" id="BussCode" name="BussCode" value="@Model.BussCode" />
        <input type="hidden" id="PlantCode" name="PlantCode" value="@Model.PlantCode" />
        <input type="hidden" id="MachineCode" name="MachineCode" value="@Model.MachineCode" />

        <!-- Machine Code -->
        <div class="form-group row">
            <label for="MachineCode" class="col-sm-2 col-form-label">Code</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="MachineCode" name="MachineCode" value="@Model.MachineCode" disabled />
            </div>
        </div>

        <!-- Machine Name -->
        <div class="form-group row">
            <label for="MachineName" class="col-sm-2 col-form-label">Machine</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="MachineName" name="MachineName" value="@Model.MachineName" required />
            </div>
        </div>

        <!-- Buy Date and Maintenance Date in a single row -->
        <div class="form-group row">
            <!-- Buy Date -->
            <label for="BuyDate" class="col-sm-2 col-form-label">Buy Date</label>
            <div class="col-sm-4">
                <input type="date" class="form-control" id="BuyDate" name="BuyDate" value="@Model.BuyDate?.ToString("yyyy-MM-dd")" />
            </div>
        </div>

        <div class="form-group row">
            <!-- Maintenance Date -->
            <label for="MaintDate" class="col-sm-2 col-form-label">Maintenance</label>
            <div class="col-sm-4">
                <input type="date" class="form-control" id="MaintDate" name="MaintDate" value="@Model.MaintDate?.ToString("yyyy-MM-dd")" />
            </div>
        </div>

        <div class="form-group row">
            <label for="Status" class="col-sm-2 col-form-label">Status</label>
            <div class="col-sm-10">
                <input type="checkbox" id="Status" name="Status" class="form-check-input" @if(Model.Status == true){ <text>checked</text> } />
            </div>
        </div>

        <!-- Usage -->
        <div class="form-group row">
            <label for="Usage" class="col-sm-2 col-form-label">Usage</label>
            <div class="col-sm-5">
                <input type="number" class="form-control" id="Usage" name="Usage" value="@Model.Usage?.ToString("F0")" step="1.00" />
            </div>
        </div>

        <!-- Submit Button -->
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </div>
    </form>
</div>

<script src="~/js/machineedit.js"></script>
