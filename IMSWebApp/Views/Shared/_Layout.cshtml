@using IMSWebApp.Models
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

@{
    var appName = Configuration["AppName"];
    var meniItem = ViewData["MenuItems"] as List<MenuList>;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@appName</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/fontawesome-free/css/all.min.css">

    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

    <!-- Tempusdominus Bootstrap 4 -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">

    <!-- iCheck -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/icheck-bootstrap/icheck-bootstrap.min.css">

    <!-- JQVMap -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/jqvmap/jqvmap.min.css">

    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminLTE/dist/css/adminlte.min.css">

    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">

    <!-- Daterange picker -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/daterangepicker/daterangepicker.css">

    <!-- summernote -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/summernote/summernote-bs4.min.css">

    <!-- Muat Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Muat DevExtreme CSS -->
    <link rel="stylesheet" href="~/css/devextreme/dx.light.css" />

    <!-- Muat jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Muat jQuery UI -->
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>

    <!-- Muat Bootstrap JS (opsional jika Anda memerlukan fitur tertentu dari Bootstrap) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

    

</head>
<body class="hold-transition sidebar-mini layout-fixed">
    @Html.AntiForgeryToken()
    <div class="wrapper">

        <!-- Preloader -->
        <div class="preloader flex-column justify-content-center align-items-center">
            <img class="animation__shake" src="~/img/berlindo_logo.jpg" alt="BMULogo" height="60" width="60">
        </div>

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    &nbsp;
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <select name="branch-options" class="form-control form-control-sm d-inline-block branchopt" id="branch-options">
                        @{
                            var httpContext = ViewContext.HttpContext;
                            var httpClientFactory = ViewContext.HttpContext.RequestServices.GetService(typeof(IHttpClientFactory)) as IHttpClientFactory;
                            List<IMSWebApp.Models.UserBranch> optionList = await IMSWebApp.Function.api.GetUserBranch(httpClientFactory, httpContext);
                            if (optionList != null)
                            {
                                foreach (var item in optionList)
                                {
                                    if (item.Id == 1)
                                    {
                                        <option selected="selected" value="@item.BranchCode">@item.BranchName</option>
                                    }
                                    else
                                    {
                                        <option value="@item.BranchCode">@item.BranchName</option>
                                    }
                                }
                            }
                        }
                    </select>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a href="/Home/Logout" class="nav-link">
                        <i class="nav-icon far fa-user"></i>
                        Logout
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-light-primary elevation-4">
            <!-- Brand Logo -->
            <a href="#" class="brand-link">
                <img src="~/img/berlindo-logo.png" alt="BMU Logo" class="brand-image img-md elevation-0" style="opacity: 2">
                <span class="brand-text font-weight-light">.</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/img/icons8-user-60.png" class="img-circle elevation-1" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">@ViewData["userName"]</a>
                    </div>
                </div>

                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-header uppercase-text">@ViewData["currentMenuName"]</li>
                        @if (meniItem != null)
                        {
                            @foreach (var menu in meniItem)
                            {
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="nav-icon fas fa-chart-pie"></i>
                                        <p>@menu.ProcesName<i class="right fas fa-angle-left"></i></p>
                                    </a>
                                    @foreach (var submenu in menu.MenuPrograms)
                                    {
                                        <ul class="nav nav-treeview">
                                            <li class="nav-item">
                                                <a href="@submenu.LinkUrl" class="nav-link">
                                                    <i class="far fa-circle nav-icon"></i>
                                                    <p>@submenu.ProgName</p>
                                                </a>
                                            </li>
                                        </ul>
                                    }
                                </li>
                            }
                        }
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            @RenderBody()
        </div>

        <!-- Footer -->
        <footer class="main-footer">
            <strong>Copyright &copy; 2025 <a href="#">Alfindo</a>.</strong>
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 1.0
            </div>
        </footer>
    </div>

    <!-- jQuery -->
    <script src="~/AdminLTE/plugins/jquery/jquery.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="~/AdminLTE/plugins/jquery-ui/jquery-ui.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/AdminLTE/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Summernote -->
    <script src="~/AdminLTE/plugins/summernote/summernote-bs4.min.js"></script>
    <!-- DevExtreme JS -->
    <script src="~/js/devextreme/dx.all.js"></script>

    <script src="~/js/devextreme/aspnet/dx.aspnet.mvc.js"></script>
    <script src="~/js/devextreme/aspnet/dx.aspnet.data.js"></script>

    <!-- AdminLTE JS -->
    <script src="~/AdminLTE/dist/js/adminlte.min.js"></script>

    <script src="~/js/activeBranch.js"></script>

    @RenderSection("gridjs", required: false)

</body>
</html>
